<%= form_for(@questionnaire_answer) do |f| %>
  <% if @questionnaire_answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@questionnaire_answer.errors.count, "error") %> prohibited this questionnaire answer from being saved:</h2>

      <ul>
      <% @questionnaire_answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= @questionnaire_answer.questions.size %>
  <% @questionnaire_answer.questions.each do |question| %>
    <h1> Kysymys </h1>
    <h3><%= question.description%></h3><br>
    <h3><%= question.questionnaire_answer_id%></h3><br>
    <%= f.fields_for :questions, question do |q| -%>
      <% if question.type == "Free_question" %>
        <%= q.text_area :answer, :size=>"50x5", :style=>"padding:5px;"%> <br>
      <% else %>
        <%= q.select(:answer, options_for_select([question.option1, question.option2, question.option3, question.option4, question.option5])) %>
      <% end %>
    <% end -%>
  <% end %>

  <%= @questionnaire_answer.identifier %>

  <div class="identifier">
    <%= f.hidden_field(:juuh, value:@questionnaire_answer.identifier) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
